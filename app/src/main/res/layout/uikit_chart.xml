<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/pie_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/pie_chart">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="@string/title_chart_legend_request"
            android:drawablePadding="@dimen/_4sdp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/title_chart_legend_progress"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/title_chart_legend_draft"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/title_chart_legend_approved"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/title_chart_legend_done"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/title_chart_legend_pending"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ic_chart_legend_6" />
    </LinearLayout>
</LinearLayout>